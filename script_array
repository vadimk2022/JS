const arr = [22, -524, -32, 355, 55, -26, 33, -230, 34, -10];
let sum = 0;
let numMin = arr[0];
let numMax = arr[0];

arr.sort(function (a, b) {
  return a - b;
});

console.log(arr);

for (let i = 0; i < arr.length; i++) {
  if (arr[i] < numMin) {
    numMin = arr[i];
  }
  if (arr[i] > numMax) {
    numMax = arr[i];
  }
  sum += arr[i];
}

alert(`Cумма: ${sum}` + `\nДлина массива: ${arr.length}` + `\nМінімальне значення масиву: ${numMin}` + `\nМаксимальне значення масиву: ${numMax}`);
